<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D1E0D3"
    xmlns:opencv="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.example.brainlegostormingapp.AutoActivity">

    <!--<TextView
        android:id="@+id/buttonDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Premi MAIN per il menÃ¹ principale o MANUAL per usare la macchina manualmente"
        tools:ignore="HardcodedText" /> -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/mainButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_bg_piu_scuro"
            android:layout_weight="1"
            android:text="MAIN"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/manualButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_bg_scuro"

            android:layout_weight="1"
            android:text="MANUAL"
            tools:ignore="HardcodedText" />
    </LinearLayout>

    <!--<TextView
        android:id="@+id/functionDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Premi START per iniziare e STOP per terminare"
        tools:ignore="HardcodedText" /> -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cronometro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:text="00:00:00:000"
            android:textSize="25sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/textX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X:"
            android:textSize="25sp"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/eTxtDimX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="0"
            android:inputType="number"
            android:digits="0123456789"
            android:importantForAutofill="no" />

        <TextView
            android:id="@+id/textY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Y:"
            android:textSize="25sp"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/eTxtDimY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="0"
            android:inputType="number"
            android:digits="0123456789"
            android:importantForAutofill="no" />

        <TextView
            android:id="@+id/txtStartX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SX:"
            android:textSize="25sp"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/eTxtStartX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="0"
            android:inputType="numberSigned"
            android:importantForAutofill="no" />

        <TextView
            android:id="@+id/txtStartY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SY:"
            android:textSize="25sp"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/eTxtStartY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="0"
            android:inputType="numberSigned"
            android:importantForAutofill="no" />
        <Spinner
            android:id="@+id/direction_spinner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:prompt="@string/direction_prompt"
            android:entries="@array/direction"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnStartButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_bg"
            android:layout_weight="1"
            android:text="START"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btnStopButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_bg"
            android:layout_weight="1"
            android:text="STOP"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btnSetDimMatrix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_bg"
            android:layout_weight="1"
            android:text="SET DIM"
            tools:ignore="HardcodedText" />
        <Button
            android:id="@+id/btnResetDimMatrix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_bg"
            android:layout_weight="1"
            android:text="RESET"
            android:visibility="gone"
            tools:ignore="HardcodedText" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnTest1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_bg"
            android:layout_weight="1"
            android:text="Test 1"
            tools:ignore="HardcodedText" />
        <Button
            android:id="@+id/btnTest2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_bg"
            android:layout_weight="1"
            android:text="Test 2"
            tools:ignore="HardcodedText" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--<LinearLayout
            android:id="@+id/matrixView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
        </LinearLayout>-->


        <org.opencv.android.JavaCameraView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:visibility="gone"
            android:id="@+id/cameraView"
            opencv:show_fps="true"
            opencv:camera_id="any"
            />
    </LinearLayout>
</LinearLayout>
