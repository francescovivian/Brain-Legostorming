<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.brainlegostormingapp.Activity.NearbySimulatorActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/mainButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_bg_piu_scuro"
            android:layout_weight="1"
            android:text="MAIN"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/manualButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_bg_scuro"

            android:layout_weight="1"
            android:text="MANUAL"
            tools:ignore="HardcodedText" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cronometro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:text="00:00:00:000"
            android:textSize="25sp"
            android:visibility="gone"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/textR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R:"
            android:textSize="25sp"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/eTxtDimR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="2"
            android:inputType="number"
            android:digits="0123456789"
            android:importantForAutofill="no" />

        <TextView
            android:id="@+id/textC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C:"
            android:textSize="25sp"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/eTxtDimC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="3"
            android:inputType="number"
            android:digits="0123456789"
            android:importantForAutofill="no" />

        <TextView
            android:id="@+id/txtStartX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SX:"
            android:textSize="25sp"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/eTxtStartX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="1"
            android:inputType="numberSigned"
            android:importantForAutofill="no" />

        <TextView
            android:id="@+id/txtStartY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SY:"
            android:textSize="25sp"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/eTxtStartY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="0"
            android:inputType="numberSigned"
            android:importantForAutofill="no" />

        <Spinner
            android:id="@+id/direction_spinner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:prompt="@string/direction_prompt"
            android:visibility="gone"
            android:entries="@array/direction"/>

        <TextView
            android:id="@+id/txtMine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="M:"
            android:textSize="25sp"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/eTxtMine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="0"
            android:inputType="numberSigned"
            android:importantForAutofill="no" />

        <TextView
            android:id="@+id/distanza"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="25sp"
            tools:ignore="HardcodedText" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnStartButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_bg"
            android:layout_weight="1"
            android:visibility="gone"
            android:text="START"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btnStopButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_bg"
            android:layout_weight="1"
            android:text="STOP"
            android:visibility="gone"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btnSetDimMatrix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_bg"
            android:layout_weight="1"
            android:text="SET DIM"
            tools:ignore="HardcodedText" />
        <Button
            android:id="@+id/btnResetDimMatrix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_bg"
            android:layout_weight="1"
            android:text="RESET"
            android:visibility="gone"
            tools:ignore="HardcodedText" />
    </LinearLayout>

    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText android:layout_width="fill_parent"
            android:id="@+id/eTxtX"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:digits="0123456789"
            android:importantForAutofill="no"
            android:inputType="number"
            android:text="2"
            android:textSize="25sp"/>
        <EditText android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/eTxtY"
            android:digits="0123456789"
            android:importantForAutofill="no"
            android:inputType="number"
            android:text="2"
            android:textSize="25sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnInvia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_bg"
            android:layout_weight="1"
            android:text="INVIA"
            tools:ignore="HardcodedText"
            android:visibility="gone"
            />
    </LinearLayout>
</LinearLayout>